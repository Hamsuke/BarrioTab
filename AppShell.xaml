<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BarrioTab.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BarrioTab"
    xmlns:Views="clr-namespace:BarrioTab.Views"
    Title="BarrioTab"
    Shell.FlyoutWidth="60"
    Shell.FlyoutBehavior="Locked"
    Shell.FlyoutBackgroundColor="#721D36"
    Shell.BackgroundColor="#721D36"
    Shell.TitleColor="Black"
    >

    <ShellContent
        Icon="home_ico.png"
        Title="Home"
        ContentTemplate="{DataTemplate Views:MainPage}"
        Route="MainPage" />

    <ShellContent
        Icon="notes_ico.png"
        Title="Orders"
        ContentTemplate="{DataTemplate Views:OrdersPage}"
        Route="OrdersPage" />

    <ShellContent
        Icon="warehouse_ico.png"
        Title="Mange Menu"
        ContentTemplate="{DataTemplate Views:manageMenuItemPage}"
        Route="ManagemenuItemPage" />

    <ShellContent
        Icon="menu_ico.png"
        Title="Settings"
        ContentTemplate="{DataTemplate Views:InventarioPage}"
        Route="SettingsPage" />

</Shell>
