<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarrioTab.Views.manageMenuItemPage"
             xmlns:model ="clr-namespace:BarrioTab.Models"
             xmlns:viewmodel="clr-namespace:BarrioTab.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:DataType="viewmodel:manageMenuItemViewModel"
             xmlns:controls="clr-namespace:BarrioTab.Controls"
             >
    <VerticalStackLayout>
        <Button Text="Editar inventario"
                Command="{Binding editarInventarioCommand}"/>

        <Button Text="Revisar reportes de turn"/>

        <Button Text="Editar categorias"
                Command="{Binding editarCategoriasCommand}"
                />

        <Button Text="Administrar usuarios"/>
        <controls:CurrentDateTimeControl/>
    </VerticalStackLayout>
    
</ContentPage>